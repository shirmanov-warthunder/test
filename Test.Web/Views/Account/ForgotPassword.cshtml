@using Test.Resources

@{
    ViewBag.Title = "ForgotPassword";
}

<h2>@AccountResources.RestourePassword</h2>
<hr/>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label for="email" class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <input type="email" name="email" class="form-control single-line" id="email" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@AccountResources.RestoureButton" class="btn btn-default" />
            </div>
        </div>
    </div>
}